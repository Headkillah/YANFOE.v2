<Window x:Class="YANFOE.UI.Dialogs.General.WndEnterAValue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter A Value" Height="120" Width="481" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60*" />
            <RowDefinition Height="40*" />
        </Grid.RowDefinitions>
        <GroupBox Header="groupBox1" Name="groupControl">
            <TextBox Name="txtInput" />
        </GroupBox>
        <Button Grid.Row="1" HorizontalAlignment="Right" Width="35" Name="btnCancel" Click="btnCancel_Click">
            <Image Source="/YANFOE;component/Resources/delete.png" />
        </Button>
        <Button Grid.Row="1" HorizontalAlignment="Right" Width="35" Margin="0,0,35,0" Click="Button_Click">
            <Image Source="/YANFOE;component/Resources/accept1.png" Name="btnOK" />
        </Button>
    </Grid>
</Window>
