<UserControl x:Class="YANFOE.UI.UserControls.TvControls.TvEpisodeDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:my="clr-namespace:YANFOE.UI.UserControls.TvControls" mc:Ignorable="d" 
             d:DesignHeight="434" d:DesignWidth="889" DataContext="{Binding Seasons/Episodes}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="800*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="300*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="52" />
            <RowDefinition Height="337*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="78" />
                <ColumnDefinition Width="230*" />
                <ColumnDefinition Width="78" />
                <ColumnDefinition Width="148*" />
                <ColumnDefinition Width="78" />
                <ColumnDefinition Width="98*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="26" />
                <RowDefinition Height="26" />
                <RowDefinition Height="337*" />
                <RowDefinition Height="26" />
                <RowDefinition Height="26" />
                <RowDefinition Height="26" />
            </Grid.RowDefinitions>
            <Label Content="Title" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" />
            <TextBox Text="{Binding EpisodeName}" VerticalContentAlignment="Center" Grid.Column="1" Grid.ColumnSpan="5" />
            <Label Content="Aired" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Grid.Row="1" />
            <TextBox Text="{Binding FirstAired}" VerticalContentAlignment="Center" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="5" />
            <Label Content="Episode #" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Grid.Row="1" Grid.Column="2" />
            <TextBox Text="{Binding EpisodeNumber}" VerticalContentAlignment="Center" Grid.Row="1" Grid.Column="3" />
            <Label Content="Plot" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Grid.Row="2" />
            <ScrollViewer Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="5">
                <TextBox ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" Text="{Binding Overview}" TextWrapping="WrapWithOverflow" />
            </ScrollViewer>
            <Label Content="Director" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Grid.Row="3" />
            <TextBox Text="{Binding DirectorAsString}" VerticalContentAlignment="Center" Grid.Row="3" Grid.Column="1" />
            <Label Content="Rating" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Grid.Row="4" />
            <TextBox Text="{Binding Rating}" VerticalContentAlignment="Center" Grid.Row="4" Grid.Column="1" />
            <Label Content="Writer" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Grid.Row="5" />
            <TextBox Text="{Binding WritersAsString}" VerticalContentAlignment="Center" Grid.Row="5" Grid.Column="1" />

            <Label Content="IMDB Id" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Grid.Row="3" Grid.Column="2" />
            <!-- TODO Bind Certification Field -->
            <TextBox Text="{Binding IMDBID}" VerticalContentAlignment="Center" Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="3" />
            <Label Content="Production #" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Grid.Row="4" Grid.Column="2" />
            <TextBox Text="{Binding ProductionCode}" VerticalContentAlignment="Center" Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="3" />
            <Label Content="Language" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Grid.Row="5" Grid.Column="2" />
            <TextBox Text="{Binding Language}" VerticalContentAlignment="Center" Grid.Row="5" Grid.Column="3" Grid.ColumnSpan="3" />

        </Grid>
        <GridSplitter Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" />
        <GroupBox Grid.Column="2" Grid.Row="1" Header="Guest Stars" Name="groupBox1">
            <Grid>
                <DataGrid AutoGenerateColumns="False" CanUserAddRows="False" ItemsSource="{Binding GuestStars}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="50*" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>
        <my:TvTopMenu x:Name="tvTopMenu1" VerticalAlignment="Top" Grid.ColumnSpan="3" Type="SaveSeries" />
    </Grid>
</UserControl>
